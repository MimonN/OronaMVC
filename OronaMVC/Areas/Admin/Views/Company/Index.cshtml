@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Phone Number</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Street Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.PhoneNumber</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.PostalCode</td>
                    <td>@obj.StreetAddress</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>