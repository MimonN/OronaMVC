@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <div class="row col-12">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-5 mt-5 d-flex justify-content-around">
                <div class="card" style="width: 18rem;">
                    <div class="d-flex justify-content-center mt-2" style="width: auto; height: 200px;">
                        <img src="@item.WindowType.ImageUrl" class="img-fluid" alt="Window Type Image">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.WindowType.WindowTypeName</h5>
                        <h5 class="card-title">@item.CleaningType.CleaningName</h5>
                        <h5 class="card-title">@item.Price</h5>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>



</div>
