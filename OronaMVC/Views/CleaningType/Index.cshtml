@model IEnumerable<CleaningType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cleaning Type List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="CleaningType" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Cleaning Type
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Cleaning Type
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.CleaningName
				</td>
                <td>
                        <div class="w-100 btn-group" role="group">
                        <a asp-controller="CleaningType" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="CleaningType" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
			</tr>
        }
    </tbody>

</table>
</div>